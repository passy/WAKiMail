<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <net.rdrei.android.wakimail.widget.Navbar
        android:id="@+id/navbar"
        style="?attr/navbarStyle"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/NavbarTitle.Text"
            android:text="@string/mail" />

        <Button
            android:id="@+id/refresh_btn"
            style="@style/NavbarTextBtn.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/refresh"
            android:visibility="visible" >
        </Button>

        <ProgressBar
            android:id="@+id/mail_loadingspinner"
            style="@style/NavbarSpinner"
            android:layout_alignParentRight="true"
            android:visibility="gone" />
    </net.rdrei.android.wakimail.widget.Navbar>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Preview: listitem=@android:layout/simple_list_item_single_choice -->
    </ListView>

    <RelativeLayout
        android:id="@android:id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/mail_loadingspinner_list"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="80dip"
            android:layout_height="80dip"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail_list_empty"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/mail_loadingspinner_list" />
    </RelativeLayout>

</LinearLayout>